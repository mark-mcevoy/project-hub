<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :user_type, collection: ['Founder', 'Volunteer/Expert', 'Government/Authority', 'Problem owner']  %>
    <%= f.association :skills %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
