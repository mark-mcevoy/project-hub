<h1>Listing skills</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @skills.each do |skill| %>
    <tr>
      <td><%= skill.name %> </td>
      <td><%= link_to 'Show', skill %> </td>
      <td><%= link_to 'Edit', edit_skill_path(skill) %> </td>
      <td><%= link_to 'Destroy', skill, data: {:confirm => 'Are you sure?'}, :method => :delete %></td>
    </tr>
    <% end %>
   </tbody>
</table>
<br />

<%= link_to 'New Skill', new_skill_path %>
